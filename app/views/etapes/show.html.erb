<%- model_class = @etape.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @etape.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rappel) %>:</strong></dt>
  <dd><%= @etape.rappel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ancestry) %>:</strong></dt>
  <dd><%= @etape.ancestry %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              etapes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_etape_path(@etape), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              etape_path(@etape),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
